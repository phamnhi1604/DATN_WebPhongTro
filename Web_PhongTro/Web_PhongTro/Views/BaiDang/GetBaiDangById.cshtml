@model IEnumerable<Web_PhongTro.ViewModels.BaiDangVM>

@{
    ViewBag.Title = "BaiDang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/Contents/Css/post_details.css">
}
 
@foreach (var item in Model)
{
    <section class="posts" id="post-detail">
        <div class="container">
            <div class="row">
                <div class="post-detail-box col-lg-8 col-md-12">
                    <div class="post-details-left">
                        <div class="post-image-container">
                            <img id="post-image" src="/Contents/Images/ImgPost/@item.BaiDang.AnhBaiDang" alt="">
                        </div>
                        <div class="list-post-image-compact">
                            @foreach (var ddAnh in item.listDdAnh)
                            {
                                <div class="post-image-compact">
                                    <img src="/Contents/Images/ImgPost/@ddAnh" onclick="changeImage('/Contents/Images/ImgPost/@ddAnh')" alt="Image 1">
                                </div>
                            }

                        </div>
                    </div>
                    <div class="post-details-contents">
                        <h1 class="title-post">@item.BaiDang.TieuDe</h1>
                        <div class="price">
                            <h2>@string.Format("{0:N0}",item.noidungPT.GiaPhong) vnđ</h2>
                        </div>
                        <h1>Thông tin mô tả</h1>
                        <p style="text-align: justify; font-size: 1.8rem;">
                            @Html.Raw(item.BaiDang.NoiDung.Replace("\\n", "<br>"))
                        </p>
                        <hr />

                        <h2>Đặc điểm phòng trọ</h2>
                        <table>
                            <tr>
                                <td>Ngày đăng</td>
                                <td>Row 3, Col 2</td>
                            </tr>
                            <tr>
                                <td class="col-1">Diện tích</td>
                                <td class="col-2">@item.noidungPT.DienTich <span style="text-transform:lowercase">m</span><sup>2</sup> </td>
                            </tr>
                            <tr>
                                <td>Địa chỉ</td>
                                <td>Row 2, Col 2</td>
                            </tr>

                        </table>
                        <div class="post-detail-map">
                            <h2>Xem trên bản đồ</h2>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62708.143874355424!2d106.58620995994364!3d10.791465086940724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752bf733e69175%3A0xd8d63453733325fe!2zVMOibiBQaMO6LCBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1730214335319!5m2!1svi!2s" width="600" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>


                        </div>

                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="contact-details">
                        <div class="contact-image-container">
                            <img id="contact-image" src="~/Contents/Images/UserImg.png" alt="">
                           
                        </div>
                        <div class="contact-opt">
                            <h1> @item.nguoiChoThue.TenNguoiChoThue</h1>
                            <button id="copyButton" onclick="copyToClipboard();">@item.nguoiChoThue.SoDienThoai</button>
                            <button><a href="https://zalo.me/@item.nguoiChoThue.SoDienThoai">Nhắn zalo</a></button>
                            <button><span>Lưu tin Này</span></button>



                        </div>

                    </div>
                    @*<div class="bg-white shadow-sm rounded p-3 mb-3 d-none d-lg-block">
