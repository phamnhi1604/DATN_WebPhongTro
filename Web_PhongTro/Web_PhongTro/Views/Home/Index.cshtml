@model List<string>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
}

<section class="posts" id="posts">
    @foreach(var tendanhmuc in Model)
    {
        var lst = ViewData[tendanhmuc] as List<Web_PhongTro.ViewModels.BaiDangVM>;
        //var lstImg = ViewData[anhBaiDang] as List<Web_PhongTro.Models>;

        if(lst.Count != 0)
        {
            <h1 class="heading"><span>Phòng trọ </span>@tendanhmuc</h1>
            <div class="container" id="post-list">
            @{
                foreach (var item in lst)
                {
                            <div class="col-12 box">
                                <div class="row">
                                    <div class="col-4" style="position:relative; overflow: hidden;">
                                        <div class="image">
                                            <img src="~/Contents/Images/ImgPost/@item.BaiDang.AnhBaiDang">
                                        </div>
                                        <div class="icons">
                                            @*<a href="javascript:void(0)" class="fas fa-shopping-cart product-cart" data-product-id="@item.BaiDang.IdBaiDang"></a>*@
                                            <a href="javascript:void(0)" class="fas fa-heart favorites-product" data-product-id="@item.BaiDang.IdBaiDang"></a>
                                            @*<a href="@Url.Action("GetSanPhamById","SanPham", new { id = item.BaiDang.IdBaiDang})" class="fas fa-eye"></a>*@
                                        </div>
                                    </div>
                                    <div class="col-8">
                                    <!-- 2/3 chiều rộng -->
                                        <div class="content">
                                            <div class="content">
                                                <h2 class="title-name"><a href="@Url.Action("GetBaiDangById","BaiDang", new { id = item.BaiDang.IdBaiDang})">@item.BaiDang.TieuDe</a></h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>   
                            </div>
                }
            }
            </div>
        }
     }

</section>

