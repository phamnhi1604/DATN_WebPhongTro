@model Web_PhongTro.Areas.NguoiChoThue.ViewModels.NguoiChoThueViewModel
@{
    ViewBag.Title = "Info";
    Layout = "~/Areas/NguoiChoThue/Views/Shared/_Layout.cshtml";
}

<div class="" style="padding: 0 15%">
    <div class="profile-form-container">
        @using (Html.BeginForm("EditProfile", "NguoiChoThue", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdNguoiChoThue)

            <div class="form-group">
                @Html.LabelFor(model => model.TenNguoiChoThue, "Họ và Tên")
                @Html.TextBox("fullName", Model.TenNguoiChoThue, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SoDienThoai, "Số Điện Thoại")
                @Html.TextBox("phone", Model.SoDienThoai, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Emai, "Email")
                @Html.TextBox("email", Model.Email, new { @class = "form-control", type = "email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DiaChi, "Địa Chỉ")
                @Html.TextBox("address", Model.DiaChi, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                @Html.Label("password", "Mật Khẩu")
                <input type="password" id="password" name="password" class="form-control" placeholder="Nhập mật khẩu mới">
            </div>
            <div class="form-group">
                @Html.Label("confirmPassword", "Xác Nhận Mật Khẩu")
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Xác nhận mật khẩu">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                <button type="button" class="btn btn-secondary" onclick="cancelUpdate()">Hủy</button>
            </div>
        }
    </div>
</div>